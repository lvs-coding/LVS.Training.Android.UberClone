<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.lvsandroid.uberclone.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        app:srcCompat="@drawable/uber_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView"
        android:scaleType="fitCenter"/>

    <TextView
        android:text="Driver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="22sp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/imageView"
        android:layout_toEndOf="@+id/switchRiderOrDriver"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="18dp" />

    <Button
        android:text="Get started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="getStarted" />

    <Switch
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:id="@+id/switchRiderOrDriver"
        android:gravity="start"
        android:textSize="14sp"
        android:switchMinWidth="40dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:text="Rider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="22sp"
        android:paddingBottom="5dp"
        android:layout_toStartOf="@+id/switchRiderOrDriver"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/imageView" />

</RelativeLayout>
